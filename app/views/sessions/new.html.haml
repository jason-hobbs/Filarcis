%body
  .bodywrapper
    %header#content-header
      %h3#storyheader Sign In
    = form_tag(session_path) do
      .row
        .large-6.columns
          .row.collapse.prefix-radius
            .small-3.medium-2.columns
              %span.prefix Email
            .small-9.medium-10.columns
              = email_field_tag :email, nil, autofocus: true, required: true, class: "radius entry", :autocomplete => :off
      .row
        .large-6.columns
          .row.collapse.prefix-radius
            .small-3.medium-2.columns
              %span.prefix Password
            .small-9.medium-10.columns
              = password_field_tag :password, nil, required: true, class: "radius entry", :autocomplete => :off
      .row.left
        .small-12.columns
          = submit_tag "Sign In", class: 'button tiny radius'
