= form_for @user, :html => { :multipart => true }  do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this User from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .row.left
    .small-12.columns
      = f.label "User Name", class: "bold"
      %br/
      = f.text_field :name, :size=>"50", class: "radius entry"
  .row.left
    .small-12.columns
      = f.label "User Email", class: "bold"
      %br/
      = f.text_field :email, class: "radius entry"
  .row.left
    .small-12.columns
      = f.label "Password", class: "bold"
      %br/
      = f.password_field :password, class: "radius entry"
  .row.left
    .small-12.columns
      = f.label "Password Confirmation", class: "bold"
      %br/
      = f.password_field :password_confirmation, class: "radius entry"
  .row.left
    .small-12.columns
      = f.label "Profile Picture", class: "bold"
      %br/
      = f.file_field :avatar
  .row.left
    .small-12.columns
      - if @user.new_record?
        = f.submit "Create User", class: 'button tiny radius'
      - else
        = f.submit "Update Account",  class: 'button tiny radius'
